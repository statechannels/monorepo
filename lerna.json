{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "concurrency": "4",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": "master",
      "message": "chore(release): publish [skip ci]",
      "includeMergedTags": true
    }
  }
}
