  "author": "Andrew Stewart",
  "license": "MIT",
  "repository": "https://github.com/magmo/devtools",
  "dependencies": {
    "chai": "4.2.0",
    "detect-port": "1.3.0",
    "dotenv": "8.1.0",
    "dotenv-expand": "5.1.0",
    "ethers": "4.0.37",
    "fs-extra": "8.1.0",
    "jest": "24.9.0",
    "solc": "0.5.11",
    "yargs": "14.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.3",
    "@types/detect-port": "1.1.0",
    "@types/dotenv": "6.1.1",
    "@types/fs-extra": "8.0.0",
    "@types/yargs": "13.0.3",
    "ganache-cli": "6.6.0",
    "lint-staged": "^9.4.0",
    "tcp-port-used": "^1.0.1",
    "tree-kill": "^1.2.1",
    "truffle": "5.0.37",
    "tslint": "5.20.0",
    "typescript": "3.6.3"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "yarn lint:check"
