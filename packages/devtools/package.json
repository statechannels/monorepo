{
  "name": "@statechannels/devtools",
  "private": true,
  "version": "0.1.21",
  "description": "Scripts used for Magmo development processes",
  "main": "lib/src/index.js",
  "scripts": {
    "prepare": "yarn build:typescript",
    "build:typescript": "npx tsc",
    "lint:check": "yarn run tslint --config tslint.json --project .",
    "lint:write": "yarn lint:check --fix",
    "precommit": "lint-staged --quiet"
