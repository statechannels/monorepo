  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug jest tests",
      "type": "node",
      "request": "launch",
      "args": [
          "scripts/test.js",
          "--runInBand",
          "--no-cache",
          "--env=jsdom"
