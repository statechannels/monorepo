{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://statechannels.org//schemas/definitions.json",
  "definitions": {
    "AddressOrEmpty": {
      "type": "string",
      "pattern": "^0x([a-fA-F0-9]{40})|0$"
    },
    "Address": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$"
    },
    "ChannelId": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{64}$"
    },
    "Amount": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{1,500}$"
    },

    "Participant": {
      "title": "Participant",
      "type": "object",
      "properties": {
        "participantId": {
          "type": "string",
          "title": "participantId"
        },
        "signingAddress": {
          "$ref": "#/definitions/Address",
          "title": "signingAddress"
        },
        "destination": {
          "$ref": "#/definitions/Address",
          "title": "destination"
        }
      },
      "required": [
        "destination",
        "participantId",
        "signingAddress"
      ]
    },
    "AllocationItem": {
      "title": "AllocationItem",
      "type": "object",
      "properties": {
        "destination": {
          "$ref": "#/definitions/Address",
          "title": "destination"
        },
        "amount": {
          "$ref": "#/definitions/Amount",
          "title": "amount"
        }
      },
      "required": [
        "amount",
        "destination"
      ]
    },
    "Allocation": {
      "title": "Allocation",
      "type": "object",
      "properties": {
        "token": {
          "$ref": "#/definitions/AddressOrEmpty",
          "title": "token"
        },
        "allocationItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AllocationItem"
          },
          "title": "allocationItems"
        }
      },
      "required": [
        "allocationItems",
        "token"
      ]
    }

  }
}