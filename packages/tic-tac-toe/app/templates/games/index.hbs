<div class="container flex items-center pt-8 w-full mb-12 mx-auto">
  <div class="w-full">
    <div class="flex">
      <div class="flex-1"></div>
      <h1 class="text-5xl font-bold">
        Games
      </h1>
      <div class="flex flex-1 justify-end">
        <button
          type="button"
          class="self-center w-48 h-10 text-xl font-bold rounded-full bg-secondary text-primary"
          {{on "click" (set this.showCreateGameModal true)}}
        >
          Create a game
        </button>
      </div>
    </div>
    <div class="mt-5">
      <div class="flex">
        <div class="card card-body bg-white flex flex-col p-4 border border-gray-400 rounded-sm">
          <h3 class="text-2xl font-medium mb-2">
            ℹ️ Try playing against yourself!
          </h3>
          <p>
            If you open a new window or tab, you can simulate two users playing this game against each other. By
            clicking
            <b>
              Create a game
            </b>
            above, you can start a game that your second browser window or tab can then join.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<Modal @isShowing={{this.showCreateGameModal}} @title="Create A Game" @onClose={{set this.showCreateGameModal false}}>
  <form {{on "submit" this.createNewGame}}>
    <label class="block mb-4">
      <span class="text-gray-700">
        Enter Round Buy In Amount
      </span>
      <div class="flex items-center">
        <Input
          class="bg-white border border-gray-300 rounded py-1 px-2 mt-1 mr-2"
          @value={{this.buyInAmount}}
          type="number"
          min="0.001"
          max="1"
          step="0.001"
        />
        <div>
          ETH
        </div>
      </div>
      <small>
        Please enter an amount between 0.001 and 1
      </small>
    </label>
    <small class="form-text text-danger cog-error-message">
      {{this.createGameError}}
    </small>
    <div class="mt-2">
      Game Buy In:
      {{mult this.buyInAmount 5}}
      ETH
    </div>
    <small class="form-text text-muted">
      This is 5 times the round buy in
      amount.
    </small>
    <div class="flex justify-center pt-2">
      <button type="submit" class="flex items-center px-4 bg-indigo-500 p-3 rounded-lg text-white hover:bg-indigo-400">
        Create Game
      </button>
    </div>
  </form>
</Modal>