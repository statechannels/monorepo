<div class="container flex items-center pt-8 w-full mb-12 mx-auto">
  <div class="w-full">
    <div class="flex">
      <div class="flex-1"></div>
      <h1 class="text-5xl font-bold">
        Games
      </h1>
      <div class="flex flex-1 justify-end">
        <button
          type="button"
          class="self-center w-48 h-10 text-xl font-bold rounded-full bg-secondary text-primary"
          {{on 'click' (set this.showCreateGameModal true)}}
        >
          Create a game
        </button>
      </div>
    </div>
    <div class="mt-5">
      <div class="flex flex-wrap justify-between">
        {{#each this.publicGames as |game|}}
          <GameCard @game={{game}} />
        {{else}}
          <GamesEmpty />
        {{/each}}
      </div>
    </div>
  </div>
</div>
<Modal
  @isShowing={{this.showCreateGameModal}}
  @title="Create A Game"
  @onClose={{set this.showCreateGameModal false}}
>
  <GameForm
    @createNewGame={{this.createNewGame}}
    @buyInAmount={{this.buyInAmount}}
    @createGameError={{this.createGameError}}
  />
</Modal>