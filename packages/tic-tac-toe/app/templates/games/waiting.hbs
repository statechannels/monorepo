<div class="container flex flex-col items-center pt-8" {{did-insert (perform this.goToGame)}}>
  <h2 class="text-3xl font-bold mb-2">
    Waiting for someone to join your game for 0.1 ETH each.
  </h2>
  <button
    type="button"
    class="w-48 h-10 text-xl font-bold rounded-full bg-secondary text-primary"
    {{on "click" this.cancelNewGame}}
  >
    Cancel
  </button>
</div>