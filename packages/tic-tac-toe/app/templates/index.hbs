<section class="flex flex-col justify-center items-center h-screen">
  {{svg-jar "logo" class="w-40 h-40"}}
  <button
    type="button"
    class="w-56 h-12 mt-10 text-xl rounded-full bg-primary text-secondary"
    {{on "click" (set this.showNameModal true)}}
  >
    Start Playing!
  </button>
</section>
<Modal @isShowing={{this.showNameModal}} @title="Tell us your name!" @onClose={{set this.showNameModal false}}>
  <label class="block mb-4">
    <span class="text-gray-700">
      Name
    </span>
    <input class="bg-white border border-gray-300 rounded py-1 px-2 mt-1 block w-full" placeholder="Jane Doe" />
    <small>
      This will be displayed to other players.
    </small>
  </label>
  <div class="flex justify-center pt-2">
    <button
      type="button"
      class="flex items-center px-4 bg-indigo-500 p-3 rounded-lg text-white hover:bg-indigo-400"
      {{on "click" this.connectWithMetaMask}}
    >
      {{svg-jar "metamask-icon" class="mr-4 h-6 w-6"}}
      Connect With MetaMask
    </button>
  </div>
</Modal>