<section class="mt-4 h-full w-4/5 flex flex-col items-center" {{did-insert this.initGame}}>
  <div class="flex-1">
    <div class="bg-bg shadow-turn rounded-full w-56 h-8 flex justify-center items-center mb-4 text-white">
      {{#if this.isItMyTurn}}
        YOUR TURN
      {{else}}
        THEIR TURN
      {{/if}}
    </div>
    <div class="text-center text-white">
      00:10
    </div>
  </div>
  <div class="grid grid-cols-3 w-full h-3/5">
    {{#each this.board as |item index|}}
      <button type="button" class={{item.class}} {{on "click" (fn this.setTile index)}}>
        {{#if (eq item.status "x")}}
          {{svg-jar "x" class="absolute"}}
        {{else if (eq item.status "o")}}
          {{svg-jar "o" class="absolute"}}
        {{/if}}
      </button>
    {{/each}}
  </div>
  <div class="flex-1"></div>
</section>
<div class="hidden">
  {{#each this.model as |message|}}
    <span {{did-insert (fn this.onMessage message)}}>
      {{message.recipient}}
    </span>
  {{/each}}
</div>