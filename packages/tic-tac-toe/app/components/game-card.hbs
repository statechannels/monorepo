<div
  class="flex flex-col justify-evenly items-center bg-white w-56 h-64 border border-sm rounded-lg border-gray-100"
>
  <div class="flex justify-center">
    <div class="ogc-vs text-red-500 mr-2 text-2xl font-bold">
      vs
    </div>
    <div class="text-2xl font-bold">
      {{@game.name}}
    </div>
  </div>
  <img class="w-12 h-12" src={{this.blockieSrc}} alt="address blockie" />
  <div class="flex justify-evenly items-center">
    <div class="pr-4 flex flex-col items-center">
      <div class="text-xs text-gray-700">
        Game Buy In:
      </div>
      <div class="text-lg">
        {{mult (format-ether @game.stake) 5}}
      </div>
      <div class="text-2xs">
        ETH
      </div>
    </div>
    <svg class="pr-4 w-1 h-3 text-gray-200 stroke-current">
      <line x1="0" y1="0" x2="0" y2="14"></line>
    </svg>
    <div class="flex flex-col items-center">
      <div class="text-xs text-gray-700">
        Round Buy In:
      </div>
      <div class="text-lg">
        {{format-ether @game.stake}}
      </div>
      <div class="text-2xs">
        ETH
      </div>
    </div>
  </div>
  <button
    type="button"
    class="w-40 h-10 rounded-full bg-red-600 text-lg font-bold text-white"
    {{on 'click' (fn this.joinGame @game)}}
  >
    Join
  </button>
</div>