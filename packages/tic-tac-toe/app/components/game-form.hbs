<form {{on 'submit' @createNewGame}}>
  <label class="block mb-4">
    <span class="text-gray-700">
      Enter Round Buy In Amount
    </span>
    <div class="flex items-center">
      <Input
        class="bg-white border border-gray-300 rounded py-1 px-2 mt-1 mr-2"
        @value={{@buyInAmount}}
        type="number"
        min="0.001"
        max="1"
        step="0.001"
      />
      <div>
        ETH
      </div>
    </div>
    <small>
      Please enter an amount between 0.001 and 1
    </small>
  </label>
  <small class="form-text text-danger cog-error-message">
    {{@createGameError}}
  </small>
  <div class="mt-2">
    Game Buy In:
    {{mult @buyInAmount 5}}
    ETH
  </div>
  <small class="form-text text-muted">
    This is 5 times the round buy in amount.
  </small>
  <div class="flex justify-center pt-2">
    <button
      type="submit"
      class="flex items-center px-4 bg-indigo-500 p-3 rounded-lg text-white hover:bg-indigo-400"
    >
      Create Game
    </button>
  </div>
</form>