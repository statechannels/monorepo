{{#if @isShowing}}
  <div class="fixed w-full h-full top-0 left-0 flex items-center justify-center">
    <div role="" class="absolute w-full h-full bg-gray-900 opacity-50"></div>
    <div role="dialog" class="bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
      <div class="py-4 text-left px-6">
        <div class="flex justify-between items-center pb-3">
          <p class="text-2xl font-bold">
            {{@title}}
          </p>
          <button type="button" class="cursor-pointer z-50" {{on "click" @onClose}}>
            {{svg-jar "modal-x"}}
          </button>
        </div>
        {{yield}}
      </div>
    </div>
  </div>
{{/if}}