    "@types/jest": "25.1.0",
    "@types/node": "13.5.1",
    "@types/prettier": "1.19.0",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.6.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-tsdoc": "0.2.6",
    "jest": "26.4.2",
    "lint-staged": "10.0.4",
