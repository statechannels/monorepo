{
  "name": "@statechannels/channel-provider",
  "license": "MIT",
  "version": "0.0.3",
  "main": "dist/channel-provider.min.js",
  "types": "dist/src/index.d.ts",
  "dependencies": {
    "debug": "4.1.1",
    "eventemitter3": "4.0.0"
  },
  "scripts": {
    "prepublish": "webpack",
    "build": "webpack",
    "build:typescript": "tsc -b .",
    "prepare": "yarn build",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "CI=true jest --runInBand --ci --all --detectOpenHandles",
    "precommit": "lint-staged --quiet",
    "lint:check": "eslint \"*/**/*.ts\" --cache",
    "lint:write": "eslint \"*/**/*.ts\" --fix"
  },
  "jest": {
    "roots": [
      "./src",
      "./tests"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/**/index.ts",
      "!./src/**/*.d.ts"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "eslint"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/debug": "4.1.1",
    "@types/eslint": "^6.1.3",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.7",
    "@types/prettier": "1.18.2",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.7.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.4.0",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.1",
    "typescript": "3.7.2",
    "webpack-cli": "3.3.9"
  }
}
