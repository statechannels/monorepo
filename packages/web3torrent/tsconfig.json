{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "jsx": "react",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2015",
    "types": ["@types/segment-analytics"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
