{
  "name": "@statechannels/web3torrent",
  "version": "0.0.1",
  "description": "A paid streaming extension implementation using state channels for the WebTorrent protocol.",
  "keywords": [
    "webtorrent",
    "state-channels",
    "webtorrent extension"
  ],
  "engines": {
    "node": "^10.16.0"
  },
  "license": "MIT",
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testMatch": [
      "<rootDir>/tests/?(*.)+(test).ts"
    ],
    "globalSetup": "./tests/setup.js",
    "globalTeardown": "./tests/teardown.js",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "main": "src/index.js",
  "dependencies": {
    "bencode": "^2.0.1",
    "debug": "^4.1.1",
    "eventemitter3": "^4.0.0",
    "prettier-bytes": "^1.0.4",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-scripts": "3.1.2",
    "webtorrent": "0.107.16"
  },
  "devDependencies": {
    "@types/bencode": "^2.0.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/webtorrent": "^0.107.0",
    "bittorrent-tracker": "^9.14.4",
    "jest-junit": "^8.0.0",
    "memory-chunk-store": "^1.3.0",
    "supports-color": "^7.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.3",
    "webtorrent-fixtures": "^1.7.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:alt": "PORT=3333 react-scripts start",
    "build": "react-scripts build",
    "build:ci": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "TRACKER_URL=http://localhost:4242/announce jest",
    "lint": "tslint -c tslint.json -p .",
    "lint:fix": "tslint -c tslint.json -p . --fix"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
