{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://statechannels.org/schemas/notification.json",
  "description": "A State Channel JSON RPC 2.0 notification",
  "oneOf": [
    {
      "description": "An individual notification",
      "$ref": "#/definitions/notification"
    },
    {
      "description": "An array of notifications",
      "type": "array",
      "items": {"$ref": "#/definitions/notification"}
    }
  ],
  "definitions": {
    "notification": {
      "type": "object",
      "required": ["jsonrpc", "method", "params"],
      "properties": {
        "jsonrpc": {"enum": ["2.0"]},
        "method": {
          "enum": ["MessageQueued", "ChannelProposed", "ChannelUpdated"]
        },
        "id": {
          "type": ["string", "number"]
        }
      },

      "allOf": [
        {
          "if": {
            "properties": {
              "method": {
                "enum": ["UIUpdate"]
              }
            }
          },
          "then": {
            "properties": {
              "params": {
                "showWallet": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {"method": {"enum": ["MessageQueued"]}}
          },
          "then": {
            "properties": {
              "params": {"$ref": "push-message.json#/definitions/PushMessageParams"}
            }
          }
        },
        {
          "if": {
            "properties": {"method": {"enum": ["ChannelProposed"]}}
          },
          "then": {
            "params": {"$ref": "create-channel.json#/definitions/CreateChannelResult"}
          }
        },
        {
          "if": {
            "properties": {"method": {"enum": ["ChannelUpdated"]}}
          },
          "then": {
            "params": {"$ref": "update-channel.json#/definitions/UpdateChannelParams"}
          }
        }
      ]
    }
  }
}
