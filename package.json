{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "yarn": "^1.17.3",
    "node": "10.16.3"
  },
  "scripts": {
    "prepare": "lerna run --concurrency 2 --stream prepare",
    "build": "lerna run build",
    "build:ci": "lerna run --since $(git merge-base $CIRCLE_BRANCH origin/master) build:ci",
    "run:w3t": "lerna run start --parallel --scope=**/web3torrent ",
    "clean": "git clean -Xdf --exclude=\"!.env\"",
    "clean:dry": "git clean -Xdn --exclude=\"!.env\"",
    "startGanache": "lerna run --parallel startGanache",
    "test:ci": "lerna run --stream --parallel test:ci",
    "test": "lerna run --stream --concurrency 1 test",
    "test:w3t": "lerna run test --concurrency 1 --scope=**/web3torrent ",
    "lint:check": "lerna run lint:check --parallel --no-bail",
    "lint:write": "lerna run lint:write --parallel --no-bail",
    "publish": "lerna publish --yes from-package patch",
    "postinstall": "patch-package"
  },
  "keywords": [
    "ethereum",
    "state channels"
  ],
  "devDependencies": {
    "husky": "3.0.7",
    "lerna": "3.16.4",
    "patch-package": "6.2.0",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.18.2",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit"
    }
  }
}
